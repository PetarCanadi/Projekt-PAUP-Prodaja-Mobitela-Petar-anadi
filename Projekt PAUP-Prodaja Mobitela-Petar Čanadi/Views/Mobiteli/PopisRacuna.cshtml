@model List<Projekt_PAUP_Prodaja_Mobitela_Petar_Čanadi.Models.Racun>
@{
    ViewBag.Title = "Popis računa";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var euroCulture = new System.Globalization.CultureInfo("eu"); // Postavljamo CultureInfo za eure
}

<div class="container">
    <h2>Popis računa</h2>
    @if (Model.Count == 0)
    {
        <p>Trenutno nema računa za prikaz.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Rbr.</th>
                    <th>Datum kupnje</th>
                    <th>Korisničko ime</th>
                    <th>Ukupan iznos</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var racun in Model)
                {
                    <tr>
                        <td>@racun.RacunID</td>
                        <td>@racun.DatumKupnje.ToString("dd.MM.yyyy. HH:mm")</td>
                        <td>@racun.KorisnickoIme</td>
                        <td>@racun.UkupanIznos.ToString("C", euroCulture)</td>
                        <td>
                            @Html.ActionLink("Detalji", "PrikaziPotvrdu", new { id = racun.RacunID }, new { @class = "btn btn-info" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        
    }
</div>

