@model Projekt_PAUP_Prodaja_Mobitela_Petar_Čanadi.Models.Reklamacija

@{
    ViewBag.Title = "Prijavi Reklamaciju";
}

<div class="container">
    <h2 class="text-center mb-4">@ViewBag.Title</h2>
    <hr />

    @using (Html.BeginForm("PrijaviReklamaciju", "Mobiteli", FormMethod.Post, new { id = "reklamacijaForma" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Proizvodjac, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Proizvodjac, new { htmlAttributes = new { @class = "form-control", placeholder = "Unesite proizvođača" } })
                    @Html.ValidationMessageFor(model => model.Proizvodjac, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control", placeholder = "Unesite naziv" } })
                    @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Cijena, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Cijena, new { htmlAttributes = new { @class = "form-control", placeholder = "Unesite cijenu" } })
                    @Html.ValidationMessageFor(model => model.Cijena, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.DatumKupnje, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.DatumKupnje, new { htmlAttributes = new { @class = "form-control", placeholder = "Unesite datum kupnje", type = "date" } })
                    @Html.ValidationMessageFor(model => model.DatumKupnje, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OpisKvara, htmlAttributes: new { @class = "control-label" })
            @Html.TextAreaFor(model => model.OpisKvara, new { @class = "form-control", rows = 4, placeholder = "Unesite opis kvara" })
            @Html.ValidationMessageFor(model => model.OpisKvara, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Prijavi Reklamaciju</button>
            </div>
        </div>
    }

    <div class="text-center">
        <a href="@Url.Action("PopisZaKorisnika", "Mobiteli")" class="btn btn-secondary">Povratak</a>
    </div>
</div>
