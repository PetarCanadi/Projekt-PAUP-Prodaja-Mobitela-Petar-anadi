@model Projekt_PAUP_Prodaja_Mobitela_Petar_Čanadi.Models.PrijavaKorisnika

@{
    ViewBag.Title = "Prijava";
}

<h2>Prijava</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.KorisnickoIme, "Korisničko Ime")
        @Html.TextBoxFor(m => m.KorisnickoIme, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.KorisnickoIme)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Lozinka)
        @Html.PasswordFor(m => m.Lozinka, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Lozinka)
    </div>

    <button type="submit" class="btn btn-primary">Prijavi se</button>
}

<div class="form-group">
    <a href="@Url.Action("PromjenaLozinke", "Korisnici")" class="btn btn-secondary">Promijeni Lozinku</a>
</div>
