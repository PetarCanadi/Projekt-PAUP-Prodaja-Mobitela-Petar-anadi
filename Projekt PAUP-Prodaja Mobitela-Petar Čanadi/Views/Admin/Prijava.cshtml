@{
    ViewBag.Title = "Prijava administratora";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("Prijava", "Admin", FormMethod.Post, new { @class = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.Label("Korisničko ime:", new { @class = "control-label" })
                            @Html.TextBox("korisnickoIme", null, new { @class = "form-control" })
                            @Html.ValidationMessage("korisnickoIme", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Lozinka:", new { @class = "control-label" })
                            @Html.Password("lozinka", null, new { @class = "form-control" })
                            @Html.ValidationMessage("lozinka", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Prijavi se" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
